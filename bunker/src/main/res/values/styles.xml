<resources>

    <!-- Base application theme. -->
    <style name="BunkerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/worksans</item>
    </style>

    <style name="TitleWhite" parent="@style/Text">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleYellow" parent="@style/Text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BodyText" parent="@style/Text">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ResultItemTitle" parent="@style/Text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/results_background</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="ResultItemBody" parent="@style/Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/results_background</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="ButtonText" parent="@style/Text">
        <item name="android:textColor">@color/bunkerColorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/worksans</item>
        <item name="android:background">@drawable/bt_background</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_forward</item>
        <item name="android:drawablePadding">26dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingStart">66dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
