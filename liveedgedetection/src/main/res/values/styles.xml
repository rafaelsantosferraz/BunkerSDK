<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bunkerColorPrimary</item>
        <item name="colorPrimaryDark">@color/bunkerColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextShadow">
        <item name="android:shadowColor">@color/colorBlackFortyPercentAlpha</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bt_background</item>
        <item name="android:paddingEnd">66dp</item>
        <item name="android:paddingStart">66dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
